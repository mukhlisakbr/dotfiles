{
  "mcpServers": {
    "trends": {
      "type": "stdio",
      "command": "uvx",
      "args": ["google-trends-mcp-qihoo"],
      "env": {}
    },
    "appstore": {
      "type": "stdio",
      "command": "node",
      "args": ["/Users/batman/data/oss/mcp-appstore/server.js"],
      "env": {}
    },
    "tavily": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "tavily-mcp@latest"],
      "env": {
        "TAVILY_API_KEY": "${TAVILY_API_KEY}"
      }
    },
    "mobile": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@mobilenext/mobile-mcp@latest"],
      "env": {}
    }
  }
}
