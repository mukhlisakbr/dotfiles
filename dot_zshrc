plugins=(git vagrant)
source $ZSH/oh-my-zsh.sh

# disable auto title
DISABLE_AUTO_TITLE=true

# brew path
export PATH="/usr/local/sbin:$PATH"
export PATH="/opt/homebrew/opt/openjdk/bin:$PATH"

# zplug
