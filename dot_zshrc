# zsh
setopt share_history
export HISTSIZE=1000000000
export SAVEHIST=$HISTSIZE

# custom zsh prompt
#export PROMPT="%F{green}%n%f%F{green}@%f%F{green}%m%f:%F{magenta}%~%f %# "

# brew shell completions
if type brew &>/dev/null
then
  FPATH="$(brew --prefix)/share/zsh/site-functions:${FPATH}"
  autoload -Uz compinit
  compinit
fi

# brew path
export PATH="/usr/local/sbin:$PATH"
export PATH="/opt/homebrew/opt/openjdk/bin:$PATH"

## start - zplug
export ZPLUG_HOME=$HOMEBREW_PREFIX/opt/zplug
source $ZPLUG_HOME/init.zsh
zplug "plugins/git", from:oh-my-zsh
zplug "zsh-users/zsh-syntax-highlighting"
zplug "zsh-users/zsh-autosuggestions"
zplug "zsh-users/zsh-completions"
#zplug "jeffreytse/zsh-vi-mode"

# theme
#zplug "miekg/lean"
#PROMPT_LEAN_TMUX=""
#zplug "jackharrisonsherlock/common", as:theme
#zplug "mafredri/zsh-async", from:github
#zplug "sindresorhus/pure", use:pure.zsh, from:github, as:theme
#zplug "win0err/aphrodite-terminal-theme", as:theme
#zplug "akz92/clean", as:theme
#zplug "gdsrosa/minimal_improved", as:theme
#zplug "andrepolischuk/neat"
#zplug "themes/robbyrussell", from:oh-my-zsh
#zplug "themes/clean", from:oh-my-zsh, as:theme
zplug "agkozak/agkozak-zsh-prompt"
#zplug "nicolodiamante/simple"

# Install plugins if there are plugins that have not been installed
if ! zplug check --verbose; then
    printf "Install? [y/N]: "
    if read -q; then
        echo; zplug install
    fi
fi

zplug load

## end - zplug

# zsh vi mode
#ZVM_VI_INSERT_ESCAPE_BINDKEY=kj

# starship
# eval "$(starship init zsh)"

# zoxide
eval "$(zoxide init zsh)"

# nvm 
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion

# alias
alias l="exa --icons"
alias ll="exa --icons -l"
alias lla="exa --icons -la"
alias lg="lazygit"
alias ld="lazydocker"
#alias cat="bat"
#alias vim="nvim"

# fzf
[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh

# pyenv
export PYENV_ROOT="$HOME/.pyenv"
[[ -d $PYENV_ROOT/bin ]] && export PATH="$PYENV_ROOT/bin:$PATH"
eval "$(pyenv init -)"
alias brew='env PATH="${PATH//$(pyenv root)\/shims:/}" brew'

# sublime
export PATH="/Applications/Sublime Text.app/Contents/SharedSupport/bin:$PATH"

# lazygit
export XDG_CONFIG_HOME="$HOME/.config"
