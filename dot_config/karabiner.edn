{:main [;; ----------------------------------------------------------------------
        ;; LAYER DEFINITIONS
        ;; ----------------------------------------------------------------------
        {:des "Layer: Hyper Mode (Caps Lock)"
         :rules [;; Hold Caps Lock for layer, Tap for Escape.
                 [:caps_lock ["hyper-mode" 1] nil {:afterup ["hyper-mode" 0]
                                                   :alone :escape}]]}

        ;; ----------------------------------------------------------------------
        ;; HYPER MODE RULES
        ;; (Active while holding Caps Lock)
        ;; ----------------------------------------------------------------------
        {:des "Rules: Hyper Mode"
         :rules [;; Commands
                 [:c :!Tc ["hyper-mode" 1]]
                 [:r :!Tr ["hyper-mode" 1]]

                 ;; Navigation
                 [:n :!Ttab ["hyper-mode" 1]]    ;; Next Tab
                 [:p :!TStab ["hyper-mode" 1]]   ;; Previous Tab
                 [:h :left_arrow ["hyper-mode" 1]]
                 [:j :down_arrow ["hyper-mode" 1]]
                 [:k :up_arrow ["hyper-mode" 1]]
                 [:l :right_arrow ["hyper-mode" 1]]]}

        ;; ----------------------------------------------------------------------
        ;; GLOBAL SHORTCUTS
        ;; (Work everywhere)
        ;; ----------------------------------------------------------------------
        {:des "Global: App Launcher (Right Command)"
         :rules [[:!Qb "open -a 'Google Chrome'"]
                 [:!Qt "open -a 'Warp'"]
                 [:!Qe "open -a 'Visual Studio Code'"]
                 [:!Qa "open -a 'ChatGPT'"]
                 [:!Qc "open -a 'WhatsApp'"]
                 [:!Qf "open -a 'Finder'"]]}

        {:des "Global: Right Option to Caps Lock"
         :rules [[:right_option :caps_lock]]}]}
