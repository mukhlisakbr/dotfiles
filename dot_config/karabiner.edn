{:main [;; ----------------------------------------------------------------------
        ;; Hyper Mode (Caps Lock)
        ;; - Hold Caps Lock to activate the "hyper-mode" layer.
        ;; - Tap for Escape.
        ;; ----------------------------------------------------------------------
        {:des "Layer Definition: Hyper Mode"
         :rules [[:caps_lock ["hyper-mode" 1] nil {:afterup ["hyper-mode" 0]
                                                   :alone :escape}]]}

        ;; ----------------------------------------------------------------------
        ;; Spacebar Mode (for App Launcher)
        ;; - Hold Spacebar to activate the "space-mode" layer.
        ;; - Tap for a normal space.
        ;; ----------------------------------------------------------------------
        {:des "Layer Definition: Space Mode"
         :rules [[:spacebar ["space-mode" 1] nil {:afterup ["space-mode" 0]
                                                  :alone :spacebar}]]}

        ;; ----------------------------------------------------------------------
        ;; Rules within Hyper Mode
        ;; ----------------------------------------------------------------------
        {:des "Hyper Mode: General Shortcuts"
         :rules [;; Ctrl Shortcuts
                 [:c :!Tc ["hyper-mode" 1]]
                 [:r :!Tr ["hyper-mode" 1]]

                 ;; Tab Navigation
                 [:n :!Ttab ["hyper-mode" 1]]   ;; Next Tab
                 [:p :!TS_tab ["hyper-mode" 1]] ;; Previous Tab
                 ]}

        {:des "Hyper Mode: Vim Navigation"
         :rules [[:h :left_arrow ["hyper-mode" 1]]
                 [:j :down_arrow ["hyper-mode" 1]]
                 [:k :up_arrow ["hyper-mode" 1]]
                 [:l :right_arrow ["hyper-mode" 1]]]}

        ;; ----------------------------------------------------------------------
        ;; App Launcher (activated by Spacebar)
        ;; ----------------------------------------------------------------------
        {:des "App Launcher"
         :rules [[:b "open -a 'Google Chrome'" ["space-mode" 1]]
                 [:t "open -a 'Warp'" ["space-mode" 1]]
                 [:e "open -a 'Visual Studio Code'" ["space-mode" 1]]
                 [:a "open -a 'ChatGPT'" ["space-mode" 1]]]}

        ;; ----------------------------------------------------------------------
        ;; Other Key Functions
        ;; ----------------------------------------------------------------------
        {:des "Right Option to Caps Lock"
         :rules [[:right_option :caps_lock]]}]}
