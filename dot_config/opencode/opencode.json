{
  "$schema": "https://opencode.ai/config.json",
  "default_agent": "plan",
  "plugin": [
  ],
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp"
    },
    "grep": {
      "type": "remote",
      "url": "https://mcp.grep.app"
    },
    "chrome-devtools": {
      "type": "local",
      "command": ["bunx", "chrome-devtools-mcp@latest"]
    },
    "appstore": {
      "type": "local",
      "command": ["node", "/Users/ghost/oss/mcp-appstore/server.js"]
    },
    "google-trends": {
      "type": "local",
      "command": ["uvx", "google-trends-mcp-qihoo"]
    },
    "tavily": {
      "type": "remote",
      "url": "https://mcp.tavily.com/mcp/?tavilyApiKey={env:TAVILY_API_KEY}",
      "oauth": false
    }
  }
}
