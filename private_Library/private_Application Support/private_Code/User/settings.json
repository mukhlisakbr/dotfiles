{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.fontFamily": "GeistMono Nerd Font Mono",
  "editor.formatOnSave": true,
  "editor.linkedEditing": true,
  "editor.minimap.enabled": false,
  "editor.tabSize": 2,
  "editor.guides.indentation": false,
  "editor.scrollbar.horizontal": "hidden",
  "editor.renderLineHighlight": "none",
  "editor.renderWhitespace": "none",
  "editor.lightbulb.enabled": "off",
  "editor.cursorBlinking": "solid",
  "editor.stickyScroll.enabled": false,
  "editor.bracketPairColorization.enabled": false,
  "editor.guides.bracketPairs": false,
  "editor.fontSize": 13,
  "editor.matchBrackets": "never",
  "editor.occurrencesHighlight": "off",
  "editor.lineHeight": 1.5,
  "editor.accessibilitySupport": "off",
  "editor.wordWrap": "on",
  "editor.scrollBeyondLastLine": false,

  // git
  "git.autofetch": true,
  "git.rebaseWhenSync": true,
  "git.followTagsWhenSync": true,
  "git.confirmSync": false,

  // terminal
  "terminal.integrated.fontFamily": "GeistMono Nerd Font Mono",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.scrollback": 10000,

  // vim
  "vim.useSystemClipboard": true,
  "vim.hlsearch": true,
  "vim.incsearch": true,
  "vim.insertModeKeyBindings": [{ "before": ["k", "j"], "after": ["<esc>"] }],
  "vim.leader": "<space>",
  "vim.normalModeKeyBindings": [
    { "before": ["<c-n>"], "commands": [":nohl"] },
    { "before": ["<leader>", "f"], "after": ["z", "a"] },
    {
      "before": ["<leader>", "<leader>"],
      "commands": ["workbench.action.quickOpen"]
    },
    {
      "before": ["<leader>", "o"],
      "commands": ["workbench.action.showAllSymbols"]
    },
    {
      "before": ["<leader>", "w"],
      "commands": ["workbench.action.files.save"]
    }
  ],
  "vim.visualModeKeyBindings": [
    { "before": [">"], "commands": ["editor.action.indentLines"] },
    { "before": ["<"], "commands": ["editor.action.outdentLines"] }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["j"],
      "after": ["g", "j"]
    },
    {
      "before": ["k"],
      "after": ["g", "k"]
    }
  ],

  // github copilot
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": false,
    "scminput": false
  },

  // window
  "window.commandCenter": false,
  "window.confirmBeforeClose": "keyboardOnly",
  "window.newWindowDimensions": "maximized",
  "window.zoomLevel": 0,

  // workbench
  "workbench.startupEditor": "none",
  "workbench.editor.editorActionsLocation": "hidden",
  "workbench.layoutControl.enabled": false,
  "workbench.tree.renderIndentGuides": "none",
  "workbench.tips.enabled": false,
  "workbench.tree.enableStickyScroll": false,
  "workbench.activityBar.location": "hidden",
  "workbench.editor.showTabs": "none",
  "workbench.colorTheme": "Ayu Dark Bordered",
  "workbench.sideBar.location": "right",

  // others
  "extensions.experimental.affinity": {
    "vscodevim.vim": 1
  },
  "php.suggest.basic": false,
  "redhat.telemetry.enabled": false,
  "explorer.compactFolders": false,
  "files.associations": {
    ".env*": "dotenv"
  },
  "breadcrumbs.enabled": false,
  "debug.javascript.codelens.npmScripts": "never",
  "apc.font.family": "GeistMono Nerd Font Mono",
  "cloudcode.duetAI.project": "gen-lang-client-0316624999",
  "diffEditor.codeLens": true
}
