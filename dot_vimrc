call plug#begin()
Plug 'sheerun/vim-polyglot'
Plug 'jszakmeister/vim-togglecursor'
Plug 'tribela/vim-transparent'
call plug#end()

syntax on

set termguicolors
set tabstop=2
set shiftwidth=2
set expandtab
set ai
set number
set hlsearch
set ruler
set clipboard=unnamed
set re=0
set background=dark

"themes
colorscheme desert

"remap
inoremap kj <Esc>
