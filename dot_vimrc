call plug#begin()

Plug 'mechatroner/rainbow_csv'
Plug 'sheerun/vim-polyglot'
Plug 'rose-pine/vim'
Plug 'folke/tokyonight.nvim', { 'rtp': 'extras/vim' }
Plug 'ayu-theme/ayu-vim'
Plug 'morhetz/gruvbox'
Plug 'ioksc/vim-osaka-solarized-theme'

call plug#end()

syntax on

set termguicolors
set tabstop=2
set shiftwidth=2
set expandtab
set ai
set number
set hlsearch
set ruler
set clipboard=unnamed
set cursorline

" Use new regular expression engine
set re=0

" remap
inoremap kj <Esc>

set background=dark
colorscheme "solarized-osaka"

" cursor
let &t_SI = "\e[6 q"
let &t_EI = "\e[2 q"

" remove bg
hi Normal guibg=NONE ctermbg=NONE
