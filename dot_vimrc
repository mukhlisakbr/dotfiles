call plug#begin()
Plug 'sheerun/vim-polyglot'
Plug 'itchyny/lightline.vim'
Plug 'tribela/vim-transparent'
Plug 'jszakmeister/vim-togglecursor'
call plug#end()

syntax on

set termguicolors
set tabstop=2
set shiftwidth=2
set expandtab
set ai
set number
set hlsearch
set ruler
set clipboard=unnamed
"set cursorline
set laststatus=2
set noshowmode
set re=0
set background=dark

colorscheme koehler

" remap
inoremap kj <Esc>
