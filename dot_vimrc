call plug#begin()

Plug 'sheerun/vim-polyglot'
Plug 'ioksc/vim-osaka-solarized-theme'
Plug 'itchyny/lightline.vim'

call plug#end()

syntax on

set termguicolors
set tabstop=2
set shiftwidth=2
set expandtab
set ai
set number
set hlsearch
set ruler
set clipboard=unnamed
set cursorline
set laststatus=2
set noshowmode
set re=0
set background=dark

colorscheme osaka_solarized

" remap
inoremap kj <Esc>

" cursor
let &t_SI = "\e[6 q"
let &t_EI = "\e[2 q"

" remove bg
"hi Normal guibg=NONE ctermbg=NONE

" fix selected color
hi Visual guifg=#00141A guibg=#B58900 gui=NONE

let g:lightline = {
      \ 'colorscheme': 'solarized',
      \ }
