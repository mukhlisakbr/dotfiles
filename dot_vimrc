call plug#begin()
Plug 'sheerun/vim-polyglot'
Plug 'jszakmeister/vim-togglecursor'
call plug#end()

syntax on

set termguicolors
set tabstop=2
set shiftwidth=2
set expandtab
set ai
set number
set hlsearch
set ruler
set clipboard=unnamed
set re=0
set background=light

"themes
colorscheme default

"remap
inoremap kj <Esc>
