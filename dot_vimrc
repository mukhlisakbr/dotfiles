call plug#begin()
Plug 'sheerun/vim-polyglot'
Plug 'tribela/vim-transparent'
Plug 'jszakmeister/vim-togglecursor'
Plug 'folke/tokyonight.nvim', { 'rtp': 'extras/vim' }
call plug#end()

syntax on

set termguicolors
set tabstop=2
set shiftwidth=2
set expandtab
set ai
set number
set hlsearch
set ruler
set clipboard=unnamed
set re=0

"colorscheme tokyonight-day

"remap
inoremap kj <Esc>
