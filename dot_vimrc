call plug#begin()

Plug 'mechatroner/rainbow_csv'
Plug 'sheerun/vim-polyglot'
Plug 'rose-pine/vim'

call plug#end()

syntax on

set nocompatible
set termguicolors
set tabstop=2
set shiftwidth=2
set expandtab
set ai
set number
set hlsearch
set ruler
set clipboard=unnamed

" Use new regular expression engine
set re=0
set modeline
set modelines=5

" remap
inoremap kj <Esc>

set background=dark
colorscheme rosepine

" change cursor in insert
let &t_SI = "\e[6 q"
let &t_EI = "\e[2 q"

" remove bg
hi Normal guibg=NONE ctermbg=NONE
